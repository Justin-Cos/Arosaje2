<%- include("_header") -%>

<h1>Plantes à garder</h1>

<div class="row">
  <% for (const plante of model.slice(0, 7)) { %>
    <div class="col-md-3 mb-4 mt-3">
      <div class="card h-100 d-flex flex-column shadow mx-1" style="border-radius: 7%; cursor: pointer;" onclick="redirectToDetails('<%= plante.plantID %>')">
        <div class="card-body">
          <h5 class="card-title"><%= plante.plantName %></h5>
          <h6 class="card-subtitle mb-3 text-muted"><%= plante.famille %></h6>
          <p class="card-text"><%= plante.location %></p>
          <% if (plante.OwnerFirstName && plante.OwnerLastName) { %>
            <p class="card-text">Propriétaire : <%= plante.OwnerFirstName %> <%= plante.OwnerLastName %></p>
          <% } else { %>
            <p class="card-text">Propriétaire : Non défini</p>
          <% } %>
        </div>
        <div class="text-center m-3">
          <a href="/plante/edit/<%= plante.plantID %>" class="btn btn-warning mr-2">Modifier</a>   
          <a href="/plante/delete/<%= plante.plantID %>" class="btn btn-danger ml-2">Effacer</a>
        </div>
      </div>
    </div>
  <% } %>

  <div class="col-md-3 mb-4 mt-3">
    <div class="card h-100 d-flex flex-column shadow mx-1" style="border-radius: 7%; cursor: pointer;">
      <div class="card-body d-flex flex-column align-items-center justify-content-center">
        <a href="/plante/create" class="btn btn-success px-5 py-3">Ajouter</a>
      </div>
    </div>
  </div>
</div>

<%- include("_footer") -%>

<script>
  function redirectToDetails(plantID) {
    window.location.href = "/plante/details/" + plantID;
  }
</script>
