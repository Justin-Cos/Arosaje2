<h1>Ajouter une plante</h1>

<form action="/plante/create" method="post">
  <div class="form-group row">
    <label for="plantType" class="col-form-label col-sm-2">Type de plante</label>
    <div class="col-sm-10">
      <select name="plantType" id="plantType" class="form-control" required>
        <!-- Populate options dynamically based on available plant types -->
        <% plantTypes.forEach(plantType => { %>
          <option value="<%= plantType.plant_type_id %>"><%= plantType.name %></option>
        <% }); %>
      </select>
    </div>
  </div>

  <div class="form-group row">
    <label for="owner" class="col-form-label col-sm-2">Propri√©taire</label>
    <div class="col-sm-10">
      <select name="owner" id="owner" class="form-control" required>
        <!-- Populate options dynamically based on available users -->
        <% users.forEach(user => { %>
          <option value="<%= user.user_id %>"><%= user.username %></option>
        <% }); %>
      </select>
    </div>
  </div>

  <!-- Other form fields -->

  <div class="form-group row">
    <label class="col-form-label col-sm-2"></label>
    <div class="col-sm-10">
      <input type="submit" value="Ajouter" class="btn btn-default btn-success" />
      <a class="btn btn-outline-dark cancel" href="/">Annuler</a>
    </div>
  </div>
</form>

<!-- Assuming you have included the _footer template -->
